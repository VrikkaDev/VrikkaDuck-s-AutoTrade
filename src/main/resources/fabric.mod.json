{
  "schemaVersion": 1,
  "id": "vrikkaducks-autotrade",
  "version": "${version}",

  "name": "VrikkaDuck's Autotrade",
  "description": "Allows you to automatically trade with villagers",

  "authors": [
    "VrikkaDuck"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/vrikkaducks-autotrade",
    "sources": "https://github.com/VrikkaDev/VrikkaDuck-s-AutoTrade"
  },

  "license": "LGPLv3",
  "icon": "assets/vrikkaducks-autotrade/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.VrikkaDuck.AutoTrade.AutoTrade"
    ],
    "modmenu": [
      "net.VrikkaDuck.AutoTrade.compat.modmenu.ModMenuImpl"
    ]
  },
  "mixins": [
    "vrikkaducks-autotrade.mixins.json"
  ],

  "depends": {
    "minecraft": "1.20.x",
    "malilib": "0.16.x",
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "java": ">=17"
  }
